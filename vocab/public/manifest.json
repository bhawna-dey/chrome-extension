{
  "manifest_version":2,

  "name":"Better Vocab",
  "author":"Bhawna",
  "version":"1.0.1",
  "desription":"Replace new tab screen with English word",

  "icons":{
    "16":"vocabFav16.ico",
    "48":"vocabFav48.ico",
    "128":"vocabFav128.ico"
  },
  "browser_action": {
      "default_popup": "index.html",
      "default_title": "Open the popup"
    },
    "background": {
      "scripts":  ["eventPage.js"], 
      "persistent": false 
    },

    "permissions": [
      "contextMenus"
    ]
}